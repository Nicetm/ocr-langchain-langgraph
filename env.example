# Configuración de Azure OpenAI
AZURE_OPENAI_API_KEY=tu_clave_de_azure_openai
AZURE_OPENAI_ENDPOINT=https://tu-recurso.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=tu_deployment_chat
AZURE_OPENAI_EMBEDDING_DEPLOYMENT_NAME=tu_deployment_embeddings
AZURE_OPENAI_API_VERSION=2024-10-21

# Configuración de PostgreSQL
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=postgres
PG_USER=postgres
PG_PASSWORD=123456
POSTGRES_CONNECTION_STRING=postgresql://postgres:123456@localhost:5432/postgres

# Nota: Asegúrate de que PostgreSQL tenga la extensión pgvector habilitada:
# CREATE EXTENSION IF NOT EXISTS vector;

# Configuración de Azure Document Intelligence
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://tu-recurso.cognitiveservices.azure.com/
AZURE_DOCUMENT_INTELLIGENCE_API_KEY=tu_clave_document_intelligence

# Configuración de LangSmith (opcional - para debugging)
LANGSMITH_API_KEY=tu_langsmith_api_key
LANGSMITH_PROJECT=tu_proyecto_langsmith
LANGCHAIN_TRACING_V2=true

# Configuración de extracción de información
# true = extraer desde OCR directamente (más rápido, menos preciso)
# false = extraer desde vectores (más lento, más preciso)
EXTRACT_FROM_OCR=true